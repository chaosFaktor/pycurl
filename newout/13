  dataLayer.push({
			'event': 'view_item',
			'ecommerce': {
				'items': [{
	      			'item_name': 'Metall Kugelschreiber XONIC Werbekugelschreiber mit Gravur Text Name Logo', // Name or ID is required.
		      		'item_id': 'ArtID_13',
	    	  		'price': 4.99,
	      			'quantity': 1
	      		}]
	      	}
	  	});
 </script>
 <script type="text/javascript">
  $(document).ready(function() {
	
		$('#weiterlesen').click(function() {

			$.ajax({
				url: "https://www.druckspezialist.eu/ajax/load-text.php",
				type: "post",
				data: "typ=showText&artikel=13",
				success: function(antwort) {
					
					ergebnis = jQuery.trim(antwort);
			
					if(ergebnis != '') {
						$('#shortText').hide();
						$('#longText').append(ergebnis);
					}	
				}		
			});
		});

		
		$('#saveCart').click(function() {

			var values = $('.artikel').serialize();

			$.ajax({
				
				url: "https://www.druckspezialist.eu/ajax/preisberechnung.php",
				type: "post",
				data: "typ=warenkorb&aid=13&"+values,
							
				success: function(antwort) {

					dataLayer.push({
						'event': 'add_to_cart',
						'ecommerce': {
							'items': [
								{
									'item_name': 'Metall Kugelschreiber XONIC Werbekugelschreiber mit Gravur Text Name Logo',
									'item_id': 'ArtID_13',
									'price': 4.99,
									'quantity': 1
								}
							]
						}
					});

					ergebnis = jQuery.trim(antwort);
					var ziel = "https://www.druckspezialist.eu/warenkorb/";					window.location.href = ziel;
			
				}		
			});

		});

		$('#pp_checkoutDE').click(function() {

			if($('#pp_checkoutDE').hasClass('pointer') == true) {

				var values = $('.artikel').serialize();

				$.ajax({
					
					url: "https://www.druckspezialist.eu/ajax/preisberechnung.php",
					type: "post",
					data: "typ=pp_checkout&aid=13&"+values,

					beforeSend: function () {
						$('#pp_checkoutDE').removeClass('pointer');
						$('#pp_checkoutDE').empty();
						$('#pp_checkoutDE').append('<i class="fa fa-spinner fa-spin fa-lg"></i> Bitte warten Sie werden gleich zu PayPal weitergeleitet...');
					},
								
					success: function(antwort) {
							
						ergebnis = jQuery.trim(antwort);

						try {
							var obj = jQuery.parseJSON(antwort);
								    
							if(obj[0].status == "OK") {
									
								window.location.href = obj[0].token;

							} else {

								alert("Fehler");
								// document.location.reload();
							}

						} catch(e) {
						    alert("Fehler");
						    // document.location.reload();
						}

					}		
				});
			}
		});


		function preisberechnung() {

			var values = $('.artikel').serialize();

			$.ajax({
				
				url: "https://www.druckspezialist.eu/ajax/preisberechnung.php",
				type: "post",
				data: "typ=preis&aid=13&"+values,
							
				success: function(antwort){

					ergebnis = jQuery.trim(antwort);

					$('#preis').empty();
					$('#preis').append(ergebnis);


					if (ergebnis.indexOf("Derzeit <span class=\"label label-danger\">0</span> Artikel auf Lager.") >= 0) {
						$('#lieferzeit').hide();
					} else {
						$('#lieferzeit').show();
					}
				}		
			});
		}

		function berechneLieferzeit() {
			
			var aid = "13";
			var option = $('#express').val();

			$.ajax({
				
				url: "https://www.druckspezialist.eu/ajax/lieferzeit-berechnung.php",
				type: "post",
				data: "typ=lieferzeit&aid=" + aid + "&option=" + option,
							
				success: function(antwort) {
					
					ergebnis = jQuery.trim(antwort);
					
					$('#lieferzeit').empty();
					$('#lieferzeit').append(ergebnis);
					
				}		
			});
		}

		$('#berechnen').click(function() {
			preisberechnung();
		});

		$('#anzahl').change(function()    { preisberechnung(); });
		$('#breite').change(function()    { preisberechnung(); });
		$('#hoehe').change(function()     { preisberechnung(); });
		$('.varianten').change(function() { preisberechnung(); });

		$('#express').change(function() {
			preisberechnung();
			setTimeout(function(){ berechneLieferzeit() }, 150);
		});

	    	    	 $('.produktfoto').elevateZoom({
				zoomType : "inner", 
				cursor: "crosshair"
			}); 
	    	
		$('.zoom').fancybox();

		preisberechnung();

	});
 </script>
